<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Delete.DeleteFragment"
    android:layout_margin="25dp">

    <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000"
            android:gravity="center"
            android:text="Por favor ingrese el nombre del dato a eliminar"/>
        <EditText
            android:id="@+id/findId"
            android:hint="nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


            <LinearLayout
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000"
                    android:text="Codigo:  "/>
                <TextView
                    android:id="@+id/tvDeleteCodigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="codigo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000"
                    android:text="Nombre:  "/>
                <TextView
                    android:id="@+id/tvDeleteNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Nombre"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000"
                    android:text="Categoria:  "/>
                <TextView
                    android:id="@+id/tvDeleteCategoria"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Categoria"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000"
                    android:text="Precio:  "/>
                <TextView
                    android:id="@+id/tvDeletePrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Precio"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnDelete"
                    android:text="Eliminar"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnFindElement"
                    android:text="Buscar"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
    </LinearLayout>




</FrameLayout>